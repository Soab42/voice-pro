generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  AGENT
  SUPERVISOR
  ADMIN
}

enum CallStatus {
  INITIATED
  RINGING
  ACTIVE
  COMPLETED
  NO_ANSWER
  FAILED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  passwordHash String
  role         Role     @default(AGENT)
  sipUsername  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  calls        Call[]   @relation("CallAgent")
}

model Call {
  id                 String     @id @default(cuid())
  agent              User?      @relation("CallAgent", fields: [agentId], references: [id])
  agentId            String?
  customerNumber     String
  direction          String
  status             CallStatus @default(INITIATED)
  telnyxLegA         String?
  telnyxLegB         String?
  telnyxConferenceId String?
  recordingUrl       String?
  aiSessionId        String?
  startedAt          DateTime   @default(now())
  answeredAt         DateTime?
  endedAt            DateTime?
  AISession          AISession?
}

model Campaign {
  id          String           @id @default(cuid())
  name        String
  status      String           @default("running")
  concurrency Int              @default(5)
  createdAt   DateTime         @default(now())
  targets     CampaignTarget[]
}

model CampaignTarget {
  id          String   @id @default(cuid())
  campaign    Campaign @relation(fields: [campaignId], references: [id])
  campaignId  String
  phone       String
  attempt     Int      @default(0)
  disposition String?
  updatedAt   DateTime @updatedAt
}

model AISession {
  id         String   @id @default(cuid())
  call       Call?    @relation(fields: [callId], references: [id])
  callId     String?  @unique
  provider   String
  configJson String
  createdAt  DateTime @default(now())
}

model PhoneNumber {
  id        String   @id @default(cuid())
  phone     String   @unique
  label     String?
  provider  String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
